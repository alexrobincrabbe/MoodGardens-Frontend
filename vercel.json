{
  "rewrites": [
    { "source": "/share/:shareId", "destination": "/api/share/:shareId" },
    {
      "source": "/((?!api/|share/|@vite/|@react-refresh|__vite_ping|.*\\..*).*)",
      "destination": "/index.html"
    },
    { "source": "/graphql", "destination": "https://api.your-domain.com/graphql" }
  ]
}
